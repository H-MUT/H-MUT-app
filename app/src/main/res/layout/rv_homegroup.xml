<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/HomeGroupImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher_round"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/HomeGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 이름"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="@id/HomeGroupImage"
        app:layout_constraintTop_toTopOf="@id/HomeGroupImage"
        />
    <TextView
        android:id="@+id/HomeGroupMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 인원"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/HomeGroupImage"
        app:layout_constraintLeft_toRightOf="@id/HomeGroupName"/>
    <TextView
        android:id="@+id/HomeGroupIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 소개"
        android:padding="1dp"
        app:layout_constraintTop_toBottomOf="@id/HomeGroupName"
        app:layout_constraintLeft_toRightOf="@id/HomeGroupImage"
        />
</androidx.constraintlayout.widget.ConstraintLayout>